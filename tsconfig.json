{
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "isolatedModules": false,
        "outDir": "./lib",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "chai",
            "mocha"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "./test",
        "./ui",
        "./lib"
    ]
}
