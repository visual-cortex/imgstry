{
    "compilerOptions": {
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "isolatedModules": false,
        "baseUrl": "./",
        "outDir": "./lib",
        "paths": {
            "~*": [
                "source/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./declarations"
        ],
        "types": [
            "chai",
            "mocha",
            "node",
            "canvas"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "./test",
        "./ui",
        "./lib"
    ]
}
