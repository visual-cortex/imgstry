{
    "compilerOptions": {
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "isolatedModules": false,
        "baseUrl": "./",
        "outDir": "./lib",
        "paths": {
            "~*": [
                "source/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./declarations"
        ],
        "types": [
            "chai",
            "mocha",
            "node",
            "canvas"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "typedocOptions": {
        "out": "./docs",
        "includes": "./source",
        "exclude": [
            "**/index.ts",
            "**/*thread*"
        ],
        "theme": "markdown",
        "mode": "file",
        "mdSourceRepo": "visual-cortex/imgstry",
        "mdEngine": "github",
        "excludePrivate": true,
        "excludeProtected": true,
        "excludeNotExported": true,
        "ignoreCompilerErrors": true,
        "gitRevision": "master"
    },
    "exclude": [
        "node_modules",
        "./test",
        "./ui",
        "./lib"
    ]
}
