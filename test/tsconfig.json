{
  "compilerOptions": {
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "isolatedModules": false,
    "baseUrl": "../",
    "paths": {
      "~*": [
        "source/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types",
      "declarations",
      "../declarations"
    ],
    "types": [
      "chai",
      "mocha",
      "node",
      "canvas"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
