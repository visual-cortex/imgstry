{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "~*": [
        "source/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types",
      "declarations",
      "../declarations"
    ],
    "types": [
      "chai",
      "mocha",
      "node",
      "canvas"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
