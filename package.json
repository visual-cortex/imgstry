{
  "name": "imgstry",
  "version": "1.0.0-alpha4",
  "description": "A JavaScript image editing module.",
  "main": "lib/index.js",
  "directories": {
    "example": "example"
  },
  "scripts": {
    "start": "concurrently \"tsc -w\" \"webpack-dev-server --port 8088\"",
    "prebuild": "npm run clean",
    "build": "concurrently \"npm run build:bundle\" \"npm run build:lib\" \"npm run build:readme\"",
    "prebuild:debug": "npm run clean",
    "build:debug": "webpack -p --progress --env.target debug",
    "build:path": "tscpaths -p tsconfig.json -s ./source -o ./lib",
    "build:test": "webpack -p --config ./test/integration/webpack.mocha.js",
    "build:lib": "tsc --declaration true && npm run build:path && npm run build:types",
    "build:types": "node ./.webpack/build/types.js",
    "build:bundle": "webpack -p --progress --env.target prod",
    "build:readme": "typedoc ./source",
    "postbuild:readme": "node ./.webpack/build/readme.js",
    "clean": "npm run clean:lib && npm run clean:dist && npm run clean:docs",
    "clean:lib": "rimraf ./lib",
    "clean:dist": "rimraf ./dist",
    "clean:docs": "rimraf ./docs",
    "test": "npm run test:unit && npm run test:integration",
    "posttest": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test:integration": "npm run build:test && ts-node --project ./tsconfig.json ./test/integration",
    "test:unit": "nyc mocha --opts ./test/unit/mocha.opts && nyc report --reporter=html",
    "lint": "tslint -p tsconfig.json"
  },
  "nyc": {
    "include": [
      "source/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/index.ts"
    ],
    "report-dir": "./reports/coverage",
    "cache": true,
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/visual-cortex/imgstry.git"
  },
  "keywords": [
    "image",
    "editing",
    "image-editing",
    "canvas",
    "filters",
    "instagram",
    "effects"
  ],
  "author": "V",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/visual-cortex/imgstry/issues"
  },
  "homepage": "https://github.com/visual-cortex/imgstry#readme",
  "devDependencies": {
    "@types/browser-sync": "0.0.43",
    "@types/chai": "4.1.7",
    "@types/jsdom": "12.2.3",
    "@types/mocha": "5.2.6",
    "@types/node": "11.11.3",
    "awesome-typescript-loader": "5.2.1",
    "browser-sync": "2.26.3",
    "chai": "4.2.0",
    "codecov": "3.2.0",
    "concurrently": "4.1.0",
    "dts-bundle": "0.7.3",
    "jsdom": "14.0.0",
    "mocha": "6.0.2",
    "mocha-headless-chrome": "2.0.2",
    "mocha-loader": "2.0.1",
    "mochawesome": "3.1.1",
    "nyc": "13.3.0",
    "rimraf": "2.6.3",
    "source-map-support": "0.5.11",
    "terser-webpack-plugin": "1.2.3",
    "ts-node": "8.0.3",
    "tsconfig-paths": "3.8.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tscpaths": "0.0.6",
    "tslint": "5.14.0",
    "tslint-eslint-rules": "5.4.0",
    "typedoc": "0.14.2",
    "typedoc-plugin-markdown": "1.1.27",
    "typescript": "3.3.3333",
    "webpack": "4.29.6",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.2.1",
    "webpack-merge": "4.2.1",
    "worker-loader": "2.0.0"
  },
  "dependencies": {
    "canvas": "2.4.0",
    "rxjs": "6.4.0"
  }
}
