// Place your settings in this file to overwrite default and user settings.
{
    "editor.tabSize": 2,
    "files.exclude": {
        ".gitattributes": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.svn": true,
        "**/ui": true,
        "coverage": true,
        "dist": true,
        "node_modules": true,
        "README.md": true,
        "source/**/*.js": true,
        "src": true,
        "test/end-to-end/*.js": true,
        "test/unit/**/*.js": true,
        "typings": true
    },
    "files.trimTrailingWhitespace": true,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "files.insertFinalNewline": true
}
